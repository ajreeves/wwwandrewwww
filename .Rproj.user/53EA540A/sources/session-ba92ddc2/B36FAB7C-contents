/* Helper functions for EJS */
<script>
function getPublisherInfo(journalName, publicationType) {
  // Default for books and chapters
  if (publicationType === 'book') {
    return { class: 'book', initial: '📚', name: 'Book Publication' };
  }
  if (publicationType === 'chapter') {
    return { class: 'chapter', initial: '📄', name: 'Book Chapter' };
  }
  
  // Journal publisher detection
  const journal = journalName ? journalName.toLowerCase() : '';
  
  // Cambridge University Press
  if (journal.includes('cambridge') || journal.includes('british journal') || 
      journal.includes('journal of politics') || journal.includes('political analysis')) {
    return { class: 'cambridge', initial: 'CUP', name: 'Cambridge University Press' };
  }
  
  // Oxford University Press
  if (journal.includes('oxford') || journal.includes('public opinion quarterly') || 
      journal.includes('political behavior') || journal.includes('parliamentary affairs')) {
    return { class: 'oxford', initial: 'OUP', name: 'Oxford University Press' };
  }
  
  // University of Chicago Press
  if (journal.includes('chicago') || journal.includes('journal of political economy') || 
      journal.includes('critical review') || journal.includes('american political science review')) {
    return { class: 'chicago', initial: 'UCP', name: 'University of Chicago Press' };
  }
  
  // SAGE Publications
  if (journal.includes('sage') || journal.includes('political research quarterly') || 
      journal.includes('comparative political studies') || journal.includes('party politics')) {
    return { class: 'sage', initial: 'SAGE', name: 'SAGE Publications' };
  }
  
  // Elsevier
  if (journal.includes('elsevier') || journal.includes('electoral studies') || 
      journal.includes('political geography') || journal.includes('government and policy')) {
    return { class: 'elsevier', initial: 'ELS', name: 'Elsevier' };
  }
  
  // Springer
  if (journal.includes('springer') || journal.includes('political studies review') || 
      journal.includes('public choice') || journal.includes('constitutional political economy')) {
    return { class: 'springer', initial: 'SPR', name: 'Springer' };
  }
  
  // Wiley
  if (journal.includes('wiley') || journal.includes('american journal of political science') || 
      journal.includes('political psychology') || journal.includes('governance')) {
    return { class: 'wiley', initial: 'WIL', name: 'Wiley' };
  }
  
  // Taylor & Francis
  if (journal.includes('taylor') || journal.includes('francis') || 
      journal.includes('political studies') || journal.includes('representation')) {
    return { class: 'taylor-francis', initial: 'T&F', name: 'Taylor & Francis' };
  }
  
  // MIT Press
  if (journal.includes('mit') || journal.includes('perspectives on politics') || 
      journal.includes('international organization')) {
    return { class: 'mit', initial: 'MIT', name: 'MIT Press' };
  }
  
  // University Presses
  if (journal.includes('harvard')) {
    return { class: 'harvard', initial: 'HUP', name: 'Harvard University Press' };
  }
  if (journal.includes('princeton')) {
    return { class: 'princeton', initial: 'PUP', name: 'Princeton University Press' };
  }
  if (journal.includes('yale')) {
    return { class: 'yale', initial: 'YUP', name: 'Yale University Press' };
  }
  if (journal.includes('stanford')) {
    return { class: 'stanford', initial: 'SUP', name: 'Stanford University Press' };
  }
  if (journal.includes('columbia')) {
    return { class: 'columbia', initial: 'CUP', name: 'Columbia University Press' };
  }
  
  // Generic fallback
  return { class: 'generic', initial: '📰', name: 'Academic Journal' };
}

function getPublisherClass(journalName, publicationType) {
  return getPublisherInfo(journalName, publicationType).class;
}

function getTagClass(tag, index) {
  const tagLower = tag.toLowerCase();
  
  // Method-related tags
  if (tagLower.includes('method') || tagLower.includes('quantitative') || tagLower.includes('qualitative') || tagLower.includes('survey') || tagLower.includes('experiment')) {
    return 'method-tag';
  }
  
  // Theory-related tags
  if (tagLower.includes('theory') || tagLower.includes('theoretical') || tagLower.includes('normative')) {
    return 'theory-tag';
  }
  
  // Empirical-related tags
  if (tagLower.includes('empirical') || tagLower.includes('data') || tagLower.includes('analysis') || tagLower.includes('statistical')) {
    return 'empirical-tag';
  }
  
  // American politics tags
  if (tagLower.includes('american') || tagLower.includes('congress') || tagLower.includes('president') || tagLower.includes('supreme court')) {
    return 'american-politics-tag';
  }
  
  // Institutions tags
  if (tagLower.includes('institution') || tagLower.includes('governance') || tagLower.includes('bureaucracy')) {
    return 'institutions-tag';
  }
  
  // Elections tags
  if (tagLower.includes('election') || tagLower.includes('voting') || tagLower.includes('campaign') || tagLower.includes('electoral')) {
    return 'elections-tag';
  }
  
  // Primary tag (first tag gets special treatment)
  if (index === 0) {
    return 'primary-tag';
  }
  
  return '';
}
</script>
</style><article class="publication-card" data-type="<%= publication_type %>">
  <div class="publication-header">
    <div class="publication-type-badge">
      <div class="type-icon <%= getPublisherClass(journal_name, publication_type) %>-icon">
        <% const publisherInfo = getPublisherInfo(journal_name, publication_type); %>
        <span class="publisher-initial"><%= publisherInfo.initial %></span>
      </div>
      <div class="type-details">
        <span class="type-label"><%= publication_type.charAt(0).toUpperCase() + publication_type.slice(1) %></span>
        <span class="publisher-name"><%= publisherInfo.name %></span>
      </div>
    </div>
    
    <% if (image) { %>
      <div class="publication-image-container">
        <img src="<%= image %>" alt="<%= title %>" class="publication-image">
        <div class="image-overlay">
          <div class="overlay-content">
            <a href="<%= url %>" class="overlay-link details-overlay" title="View Details">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
            </a>
          </div>
        </div>
      </div>
    <% } %>
    
    <div class="publication-meta">
      <% if (date) { %>
        <span class="publication-year"><%= date %></span>
      <% } %>
      <% if (status) { %>
        <span class="publication-status <%= status %>"><%= status %></span>
      <% } %>
    </div>
  </div>
  
  <div class="publication-content">
    <h3 class="publication-title">
      <a href="<%= url %>" class="title-link"><%= title %></a>
    </h3>
    
    <% if (journal_name) { %>
      <p class="publication-journal"><%= journal_name %></p>
    <% } %>
    
    <% if (tags && tags.length > 0) { %>
      <div class="publication-tags">
        <% tags.forEach(function(tag, index) { %>
          <span class="tag-item <%= getTagClass(tag, index) %>"><%= tag %></span>
        <% }); %>
      </div>
    <% } else if (description) { %>
      <p class="publication-description"><%= description %></p>
    <% } %>
    
    <% if (authors && authors.length > 0) { %>
      <div class="publication-authors">
        <% authors.forEach(function(author, index) { %>
          <span class="author"><%= author %></span><% if (index < authors.length - 1) { %>, <% } %>
        <% }); %>
      </div>
    <% } %>
    
    <% if (keywords && keywords.length > 0) { %>
      <div class="publication-keywords">
        <% keywords.forEach(function(keyword) { %>
          <span class="keyword-tag"><%= keyword %></span>
        <% }); %>
      </div>
    <% } %>
  </div>
  
  <div class="publication-footer">
    <div class="publication-links">
      <a href="<%= url %>" class="publication-link primary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg>
        Details
      </a>
      
      <% if (pdf) { %>
        <a href="<%= pdf %>" class="publication-link secondary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14,2 14,8 20,8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10,9 9,9 8,9"></polyline>
          </svg>
          PDF
        </a>
      <% } %>
      
      <% if (doi) { %>
        <a href="https://doi.org/<%= doi %>" class="publication-link secondary" target="_blank" rel="noopener">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15,3 21,3 21,9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
          DOI
        </a>
      <% } %>
      
      <% if (url_preprint) { %>
        <a href="<%= url_preprint %>" class="publication-link secondary" target="_blank" rel="noopener">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14,2 14,8 20,8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
          </svg>
          Preprint
        </a>
      <% } %>
    </div>
    
    <% if (citation_count || altmetric_score) { %>
      <div class="publication-metrics">
        <% if (citation_count) { %>
          <span class="metric-badge citations">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"></path>
            </svg>
            <%= citation_count %> citations
          </span>
        <% } %>
        
        <% if (altmetric_score) { %>
          <span class="metric-badge altmetric">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
            <%= altmetric_score %> altmetric
          </span>
        <% } %>
      </div>
    <% } %>
  </div>
</article>

